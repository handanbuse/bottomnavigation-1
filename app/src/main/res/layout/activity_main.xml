<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/mainActivity_bottomnav"
        android:id="@+id/mainActivity_frame"></FrameLayout>




    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/mainActivity_bottomnav"
        android:background="@color/white"
        app:itemIconTint="@color/bottombar_color"
        app:itemTextColor="@color/bottombar_color"
        app:menu="@menu/bottom_menu"
        android:layout_alignParentBottom="true"></com.google.android.material.bottomnavigation.BottomNavigationView>



</RelativeLayout>